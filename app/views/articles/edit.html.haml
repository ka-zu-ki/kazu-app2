.container
  %ul
    = @article.errors.full_messages.each do |message|
      %li= message
    %ul
      = form_with(model: @article, url: article_path, method: 'put', local: true) do |f|
        %div
          = f.label :title, 'タイトル'
        %div
          = f.text_field :title, class: 'text'
        %div
          = f.label :content, '内容'
        %div
          = f.text_area :content
        %div
          = f.submit '保存', class: 'btn-primary'
